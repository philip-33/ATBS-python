retval = 0
num = 1
number = 0

def collatz(number):
    try:
        int(number)
    except ValueError:
        print("You must enter an interger")
        return ('')
    number = int(number)
    if (number % 2 == 0):
        retval = number//2
        return (retval)
    elif (number % 2 == 1):
        retval = 3 * number + 1
        return (retval)
    else:
        return (0)

while (bool(num)):
    num = input("Enter your number: ")
    print(collatz(num))
